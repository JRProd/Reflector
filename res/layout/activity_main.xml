<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF000000"
    tools:context="net.reflectorproject.Main" >

    <Button
        android:id="@+id/bOptions"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Options" 
        />

    <Button
        android:id="@+id/bStore"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bAchive"
        android:layout_alignBottom="@+id/bAchive"
        android:layout_alignRight="@+id/bPlay"
        android:text="Store" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/bOptions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="@string/title"
        android:textSize="60sp" 
        android:textColor="#FFFFFFFF"/>

    <Button
        android:id="@+id/bPlay"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bAchive"
        android:layout_alignRight="@+id/title"
        android:layout_marginBottom="21dp"
        android:text="Play" />

    <Button
        android:id="@+id/bAchive"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bPlay"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:text="Achivements"
        android:textSize="15sp" />

    <Button
        android:id="@+id/bRate"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bStore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Rate Our Game" />

</RelativeLayout>