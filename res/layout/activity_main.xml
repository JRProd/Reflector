<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main_background"
    tools:context="net.reflectorproject.Main" >

    <Button
        android:id="@+id/bStore"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bAchive"
        android:layout_alignBottom="@+id/bAchive"
        android:layout_alignRight="@+id/bPlay"
        android:text="@string/store" />

    <Button
        android:id="@+id/bPlay"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bAchive"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="@string/play" />

    <Button
        android:id="@+id/bAchive"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bPlay"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:text="@string/achievements"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bRate"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bStore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="@string/rate" />

    <ImageButton
        android:id="@+id/ibOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:maxHeight="65dp"
        android:maxWidth="65dp"
        android:scaleType="fitCenter"
        android:src="@drawable/options_button_icon" />

</RelativeLayout>